#!/bin/sh

VIDS_THUMBS_DIR="$HOME/.catch/vidthmbs/"
vidthumb() {
    p="$VIDS_THUMBS_DIR$(realpath """$f""").jpg"
    mkdir -p "$(dirname """$p""")"
    echo "$p"
}

dir=.
img=
opt='-t'
[ "$1" != '' ] && {
    [ -f "$1" ] && {
        dir=$(dirname "$1")
        img=$(basename "$1")
        opt=''
    } || dir="$1"
}

cd "$dir"
files=$(file --mime-type ./*)
images=$({
            # images
            echo "$files" | grep image/ | awk -F':' '{print $1}'
            # videos
            echo "$files" | grep video/ | awk -F':' '{print $1}' | \
                while read -r f; do
                    t=$(vidthumb "$f")
                    [ ! -f "$t" ] && \
                        ffmpegthumbnailer -i "$f" -o "$t" -s 0
                    echo "$t"
                done
        } | xargs -d '\n' ls -1)

[ "$img" != '' ] && [ -f "$img" ] && {
    n=$(echo "$images" | nl | grep "$img" | awk '{print $1}')
    opt="$opt -n $n"
}

echo "$images" | sxiv -b $opt -
