#!/bin/sh
D="$HOME/.dotfiles/display-layouts"
if [ "$1" = '-d' ]; then
    sel='default'
else
    sel=$( (echo default \
               && ls -1 "$D/" | grep -v default | awk -F'.' '{print $1}' \
               && echo 'More options') \
              | menu-interface -l 20 -p 'Select the display layout')
fi

if [ "$sel" = 'More options' ]; then
    arandr
elif [ "$sel" ]; then
    sh "$D/${sel}.sh"
fi

setwallpaper
