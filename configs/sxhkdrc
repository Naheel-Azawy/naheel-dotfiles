# Close focused program
super+q
	wmctl nice-kill

# Close focused window keeping tmux sessions
super+shift+q
	i3-msg kill

# Ignore the tmux session (if is) and kill focused window
super+control+q
	theterm --tmux-ignore && i3-msg kill

# Enter fullscreen mode for the focused container
super+f
	i3-msg fullscreen toggle

# Toggle tiling / floating
super+t
	i3-msg floating toggle

# Toggle sticky window
super+shift+t
	i3-msg sticky toggle

# Toggle split
super+shift+slash
	i3-msg split t

# Change focus between tiling / floating windows
super+slash
	i3-msg focus mode_toggle

# Focus the parent container
super+a
	i3-msg focus parent

# Focus the child container
super+shift+a
	i3-msg focus child

# Change focus
super+{Left,Right,Up,Down}
	i3-msg focus {left,right,up,down}

# Move focused window
super+shift+{Left,Right,Up,Down}
	i3-msg move {left,right,up,down}

# Resize window
super+ctrl+{Left,Right,Up,Down}
	i3-msg resize {shrink width,grow width,shrink height,grow height} 10 px or 10 ppt

# Resize window (a little bit)
super+shift+ctrl+{Left,Right,Up,Down}
	i3-msg resize {shrink width,grow width,shrink height,grow height} 1 px or 1 ppt

# Switch to workspace
super+{1-9,0}
	i3-msg workspace {1-9,10}

# Move focused container to workspace
super+ctrl+{1-9,0}
	i3-msg move container to workspace {1-9,10}

# Move focused container to workspace and go there
super+shift+{1-9,0}
	w={1-9,10}; i3-msg move container to workspace $w\\; workspace $w

# Move to next workspace
super+Tab
	i3-msg workspace next

# Move to previous workspace
super+shift+Tab
	i3-msg workspace prev

# Move workspace to next monitor
super+ctrl+p
	i3-msg move workspace to output right

# Restart window manager
super+shift+r
	i3-msg restart; pkill -USR1 -x sxhkd

# Start a terminal
super+Return
	theterm

# Start a terminal with opposite split
super+shift+Return
	i3-msg split t; theterm

# Start a terminal (without tmux)
super+ctrl+Return
	$TERMINAL bash

# Start a terminal with opposite split (without tmux)
super+shift+ctrl+Return
	i3-msg split t; $TERMINAL bash

# Start file manager
super+apostrophe
	theterm lf

# Start file manager with opposite split
super+shift+apostrophe
	i3-msg split t; theterm lf

# Empty window
super+e
	empty

# Empty window with opposite split
super+shift+e
	i3-msg split t; empty

# Start the program launcher
super+d
	menus

# Switch language
super+space
	lang tog

# Switch language (extended)
super+shift+space
	lang tog -e

# Toggle on-screen keyboard
super+k
	pkill onboard || onboard

# Open the internet browser
super+b
	browser

# Open calculator
super+equal
	calc-floating

# Open tiny camera
super+minus
	tiny-camera

# Lock screen
super+l
	lockscreen

# Power options
super+x
	menus power

# Mount a drive
super+m
	dmenumount

# Display options
super+p
	dmenudisplay

# Reset display options
super+shift+p
	dmenudisplay -d

# Clipboard manager
super+c
	clipmenu

# Common words (copy to clipboard)
super+w
	dmenuwords

# Unicode characters (copy to clipboard)
super+u
	dmenuunicode

# Get the bibliography or PDF from the current window
super+r
	getbib

# Youtube stuff
super+y
	dmenuyoutube

# Help (based on copied term)
super+h
	dmenuwhat

# Network manager menu
super+n
	networkmanager_dmenu

# Togggle opacity of current window
super+o
	toggle-opacity

# Toggle notifications
super+i
	notiftog

# Notifications pop history
super+ctrl+i
	dunstctl history-pop

# Close all notifications
super+shift+i
	dunstctl close-all

# Take a screenshot
Print
	screenshot

# Take a screenshot to clipboard
ctrl+Print
	screenshot -c

# Take a screenshot of area
shift+Print
	screenshot -a

# Take a screenshot of area to clipboard
shift+ctrl+Print
	screenshot -a -c

# Take a screenshot of current window
alt+Print
	screenshot -w

# Take a screenshot of current window to clipboard
alt+ctrl+Print
	screenshot -w -c

# ¯\_(ツ)_/¯
super+backslash
	lolcowforune

# ¯\_(ö)_/¯
super+shift+backslash
	lolcowforune -p

# Jump to quick command
super+j
	quickcmd

# Edit to quick command
super+ctrl+j
	quickcmd -e

# Show shortcuts help screen
super+F1
	theterm 'keybindingsgen.py -d | less'

# Show the system monitor
super+grave
	i3-msg workspace \#; system-monitor -1

XF86AudioMute
	audioctl mute

XF86AudioLowerVolume
	audioctl down 5

XF86AudioRaiseVolume
	audioctl up   5

super+XF86AudioMute
	audioctl pause

super+XF86AudioLowerVolume
	audioctl prev

super+XF86AudioRaiseVolume
	audioctl next

super+shift+XF86AudioLowerVolume
	audioctl back    10

super+shift+XF86AudioRaiseVolume
	audioctl forward 10

XF86AudioNext
	audioctl next

XF86AudioPlay
	audioctl pause

XF86AudioPrev
	audioctl prev

XF86AudioStop
	audioctl stop

XF86AudioRewind
	audioctl back    10

XF86AudioForward
	audioctl forward 10

XF86PowerOff
	menus power

XF86Calculator
	calc-float

XF86Explorer
	theterm lf

XF86WWW
	browser

XF86ScreenSaver
	lockscreen

XF86MyComputer
	theterm lf

XF86Eject
	dmenuumount

XF86HomePage
	browser https://www.duckduckgo.com

XF86Reload
	restart

XF86TouchpadToggle
	toggletouchpad

XF86TouchpadOn
	synclient TouchpadOff=0

XF86TouchpadOff
	synclient TouchpadOff=1

XF86Suspend
	lockscreen

XF86Close
	wmctl nice-kill

XF86WebCam
	camtoggle

XF86Search
	browser https://duckduckgo.com

XF86Shop
	browser https://ebay.com

XF86MonBrightnessDown
	brightness -dec 15

XF86MonBrightnessUp
	brightness -inc 15

shift+XF86MonBrightnessDown
	brightness -dec 1

shift+XF86MonBrightnessUp
	brightness -inc 1

XF86AudioMedia
	cmus-tmux-st

XF86Display
	dmenudisplay

XF86Documents
	theterm lf "$HOME/Documents"

XF86WLAN
	sudo -A systemctl restart NetworkManager

super+shift+v
	/mnt/hdd1/Private/m-launcher.sh

super+semicolon
	edit "$HOME/Dropbox/orgmode/TODO.org"

super+shift+semicolon
	calendar

